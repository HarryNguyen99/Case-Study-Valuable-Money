<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng Thu:"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_TongThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="1000000"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_themkhoanthu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thêm Khoản Thu"
        android:textColor="#1CFA02"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:enabled="false"
        android:id="@+id/edt_id"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt_khoanthu"
        android:hint="ID"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/edt_nguonthu"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt_khoanthu"
        android:hint="Nhập nguồn Tiền"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/edt_sotien"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/edt_khoanthu"
        android:hint="Nhập Số Tiền"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_Them"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_thu"
            android:hint="Thêm"
            android:textColorHint="#ffffff"
            android:textSize="20sp" />

        <Button
            android:enabled="false"
            android:id="@+id/btn_XacNhan"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_xacnhan"
            android:hint="Sửa"
            android:textColorHint="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_Huy"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_chi"
            android:hint="Hủy"
            android:textColorHint="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.8"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khoản Thu Gần Đây"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:padding="10dp"
            />

        <ListView
            android:id="@+id/lv_Thu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"/>

    </LinearLayout>

</LinearLayout>